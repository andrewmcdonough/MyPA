<h1>Your appointments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start at</th>
    <th>End at</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to h(event.name), event %></td>
    <td><%=h event.start_at %></td>
    <td><%=h event.end_at %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Delete', event, :confirm => 'Are you sure you want to delete your appointment?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a new appointment', new_event_path %>